{
  "openapi": "3.0.1",
  "info": {
    "title": "Players Game Data",
    "description": "Application for Manage Player Game Data",
    "termsOfService": "http://example.com/terms/",
    "contact": {
      "name": "Eric",
      "url": "https://github.com/bang-eric",
      "email": "ezraricardo@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
